title = 'FuturaOld', 'HelveticaNeue', 'Helvetica Neue', 'Arial', sans-serif

html, body
	height 100%
body
	font-family 'HelveticaNeue', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color white
	background blue
	font-variant: normal;
	padding-top 80px
	@media (min-width: scr_md)
		padding-top 0px
	@media (max-width: 568px)
		padding-top 60px
	&.open
		.overlay
			position fixed
			top 0
			left 0
			z-index 2
			width 100%
			height 100%
a
	t all



svg
	t fill
	path, g
		t fill

.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	&--on
		pointer-events initial
